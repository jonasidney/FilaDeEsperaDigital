<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FilaEsperaDigital.Views.LoginPage"
             Title="Login"
             BackgroundColor="#F5F5F5">

    <StackLayout Padding="20" Spacing="20">

        <!-- Título -->
        <Frame BackgroundColor="#1CBCF0" Padding="15" CornerRadius="10">
            <Label Text="Fila de Espera Digital" 
                   FontSize="24" 
                   FontAttributes="Bold" 
                   TextColor="White" 
                   HorizontalOptions="Center" />
        </Frame>

        <!-- Imagem -->
        <Image Source="fila_digit.png" HeightRequest="150" Aspect="AspectFit" />

        <!-- Campos -->
        <Entry Placeholder="Seu e-mail" />
        <Entry Placeholder="Sua senha" IsPassword="True" />

        <!-- Botões -->
        <Button Text="Entrar" BackgroundColor="#1CBCF0" TextColor="White" Clicked="OnEntrarClicked"/>
        <Button Text="Cadastrar" BackgroundColor="#E53E3E" TextColor="White" Clicked="OnCadastrarClicked" />
        <Button Text="Acessar Painel Prestador" BackgroundColor="#F5B041" TextColor="White" Clicked="OnPainelPrestadorClicked"/>


    </StackLayout>
</ContentPage>
