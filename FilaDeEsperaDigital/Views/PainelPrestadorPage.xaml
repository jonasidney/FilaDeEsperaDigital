<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="FilaEsperaDigital.Views.PainelPrestadorPage"
    BackgroundColor="#F5F5F5">

    <Grid RowDefinitions="Auto,*,Auto" Padding="0">

        <!-- Cabeçalho fixo (tudo acima e incluindo o label Aguardando) -->
        <StackLayout Grid.Row="0" Padding="16" Spacing="10">

            <!-- Barra de Título -->
            <Frame BackgroundColor="#1CBCF0" Padding="10" CornerRadius="12">
                <Grid ColumnDefinitions="*,Auto">
                    <Label Grid.Column="0" Text="{Binding NomePrestador}" FontSize="18"
                           FontAttributes="Bold" TextColor="White" VerticalOptions="Center"/>
                    <Frame Grid.Column="1" BackgroundColor="White" CornerRadius="20" WidthRequest="38" HeightRequest="38" Padding="0" VerticalOptions="Center">
                        <Label Text="{Binding Avatar}" FontSize="18" HorizontalOptions="Center" VerticalOptions="Center">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding EditarPerfilCommand}"/>
                            </Label.GestureRecognizers>
                        </Label>
                    </Frame>
                </Grid>
            </Frame>

            <!-- Card: Indicadores Status da Fila -->
            <Frame BackgroundColor="White" Padding="14" CornerRadius="10" HasShadow="True">
                <Grid ColumnDefinitions="*,*,*" VerticalOptions="Center">
                    <!-- Na fila -->
                    <StackLayout Grid.Column="0" HorizontalOptions="Center" Spacing="2">
                        <Label Text="Na fila" FontSize="12" TextColor="#333" HorizontalOptions="Center"/>
                        <StackLayout Orientation="Horizontal" Spacing="4" HorizontalOptions="Center">
                            <Label Text="{Binding Status.PessoasNaFila, StringFormat='{0:D2}'}"
                                   FontSize="16" FontAttributes="Bold" TextColor="#1CBCF0"/>
                            <Label Text="👥" FontSize="16" VerticalOptions="Center"/>
                        </StackLayout>
                    </StackLayout>
                    <!-- Atendidos -->
                    <StackLayout Grid.Column="1" HorizontalOptions="Center" Spacing="2">
                        <Label Text="Atendidos" FontSize="12" TextColor="#333" HorizontalOptions="Center"/>
                        <StackLayout Orientation="Horizontal" Spacing="4" HorizontalOptions="Center">
                            <Label Text="{Binding Status.Atendidos, StringFormat='{0:D2}'}"
                                   FontSize="16" FontAttributes="Bold" TextColor="#1CBCF0"/>
                            <Label Text="👥" FontSize="16" VerticalOptions="Center"/>
                        </StackLayout>
                    </StackLayout>
                    <!-- Tempo médio -->
                    <StackLayout Grid.Column="2" HorizontalOptions="Center" Spacing="2">
                        <Label Text="Tempo médio" FontSize="12" TextColor="#333" HorizontalOptions="Center"/>
                        <StackLayout Orientation="Horizontal" Spacing="4" HorizontalOptions="Center">
                            <Label Text="{Binding Status.TempoMedioFormatado}" FontSize="16"
                                   FontAttributes="Bold" TextColor="#1CBCF0"/>
                            <Label Text="🕐" FontSize="16" VerticalOptions="Center"/>
                        </StackLayout>
                    </StackLayout>
                </Grid>
            </Frame>

            <!-- Card: Em andamento -->
            <Frame BackgroundColor="White" Padding="10" CornerRadius="10" HasShadow="True">
                <Grid ColumnDefinitions="42,*,Auto" RowDefinitions="Auto,Auto">
                    <!-- Avatar à esquerda -->
                    <Frame Grid.Row="0" Grid.RowSpan="2" Grid.Column="0"
                           BackgroundColor="#E0E0E0" CornerRadius="21"
                           WidthRequest="42" HeightRequest="42" Padding="0" VerticalOptions="Center">
                        <Label Text="🧑" FontSize="26" HorizontalOptions="Center" VerticalOptions="Center"/>
                    </Frame>
                    <!-- Info central (Rótulo + Nome) -->
                    <StackLayout Grid.Row="0" Grid.Column="1" Spacing="2" Margin="0,4,0,0">
                        <Label Text="Em andamento" FontSize="13" FontAttributes="Bold" TextColor="#1CBCF0"/>
                        <Label Text="{Binding ClienteEmAtendimento.Nome}" FontSize="15" FontAttributes="Bold" TextColor="#333"/>
                    </StackLayout>
                    <!-- Botão à direita -->
                    <Button Grid.Row="0" Grid.Column="2"
                            Text="Concluir"
                            BackgroundColor="#1CBCF0"
                            TextColor="White"
                            HeightRequest="34" WidthRequest="81"
                            FontSize="13" CornerRadius="8"
                            VerticalOptions="Start"
                            Command="{Binding ConcluirCommand}" />
                    <!-- Horário previsto na base -->
                    <StackLayout Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2"
                                 Orientation="Horizontal" Spacing="4" VerticalOptions="End" Margin="0,3,0,0">
                        <Label Text="🕐" FontSize="13"/>
                        <Label Text="{Binding ClienteEmAtendimento.HorarioFormatado}"
                               FontSize="13" TextColor="#1CBCF0" FontAttributes="Bold"/>
                    </StackLayout>
                </Grid>
            </Frame>

            <!-- Card: Próximo -->
            <Frame BackgroundColor="White" Padding="10" CornerRadius="10" HasShadow="True">
                <Grid ColumnDefinitions="42,*,Auto" RowDefinitions="Auto,Auto">
                    <!-- Avatar à esquerda -->
                    <Frame Grid.Row="0" Grid.RowSpan="2" Grid.Column="0"
                           BackgroundColor="#E0E0E0" CornerRadius="21"
                           WidthRequest="42" HeightRequest="42" Padding="0" VerticalOptions="Center">
                        <Label Text="🧑" FontSize="26" HorizontalOptions="Center" VerticalOptions="Center"/>
                    </Frame>
                    <!-- Info central (Rótulo + Nome) -->
                    <StackLayout Grid.Row="0" Grid.Column="1" Spacing="2" Margin="0,4,0,0">
                        <Label Text="Próximo" FontSize="13" FontAttributes="Bold" TextColor="#1CBCF0"/>
                        <Label Text="{Binding ProximoCliente.Nome}" FontSize="15" FontAttributes="Bold" TextColor="#333"/>
                    </StackLayout>
                    <!-- Botão Cancelar à direita no topo -->
                    <Button Grid.Row="0" Grid.Column="2"
                            Text="Cancelar"
                            BackgroundColor="#E53E3E"
                            TextColor="White"
                            HeightRequest="34" WidthRequest="81"
                            FontSize="13" CornerRadius="8"
                            VerticalOptions="Start"
                            Command="{Binding CancelarProximoCommand}" />
                    <!-- Botão Iniciar alinhado à direita na base -->
                    <Button Grid.Row="1" Grid.Column="2"
                            Text="Iniciar"
                            BackgroundColor="#1CBCF0"
                            TextColor="White"
                            HeightRequest="34" WidthRequest="81"
                            FontSize="13" CornerRadius="8"
                            VerticalOptions="End"
                            Command="{Binding IniciarCommand}" />
                    <!-- Horário previsto na base -->
                    <StackLayout Grid.Row="1" Grid.Column="1"
                                 Orientation="Horizontal" Spacing="4" VerticalOptions="End" Margin="0,3,0,0">
                        <Label Text="🕐" FontSize="13"/>
                        <Label Text="{Binding ProximoCliente.HorarioFormatado}"
                               FontSize="13" TextColor="#1CBCF0" FontAttributes="Bold"/>
                    </StackLayout>
                </Grid>
            </Frame>

            <!-- Label aguardando (fixo junto do cabeçalho) -->
            <Label Text="Aguardando" FontSize="15" FontAttributes="Bold" TextColor="#1CBCF0" Margin="0,4,0,0"/>
        </StackLayout>

        <!-- Lista de espera rolável -->
        <CollectionView Grid.Row="1" Margin="16,0,16,8"
                        ItemsSource="{Binding ClientesAguardando}" SelectionMode="None">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame BackgroundColor="White" Padding="10" Margin="0,4" CornerRadius="10" HasShadow="True">
                        <Grid ColumnDefinitions="42,*,Auto" RowDefinitions="Auto,Auto">
                            <Frame Grid.Row="0" Grid.RowSpan="2" Grid.Column="0"
                                   BackgroundColor="#E0E0E0" CornerRadius="21"
                                   WidthRequest="42" HeightRequest="42" Padding="0" VerticalOptions="Center">
                                <Label Text="🧑" FontSize="26" HorizontalOptions="Center" VerticalOptions="Center"/>
                            </Frame>
                            <Label Grid.Row="0" Grid.Column="1"
                                   Text="{Binding Nome}" FontSize="15" FontAttributes="Bold"
                                   TextColor="#333" VerticalOptions="Center"/>
                            <Button Grid.Row="0" Grid.Column="2"
                                    Text="Cancelar"
                                    BackgroundColor="#E53E3E"
                                    TextColor="White"
                                    HeightRequest="34" WidthRequest="81"
                                    FontSize="13" CornerRadius="8"
                                    VerticalOptions="Start"
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.CancelarAguardandoCommand}"
                                    CommandParameter="{Binding .}" />
                            <StackLayout Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2"
                                         Orientation="Horizontal" Spacing="4" VerticalOptions="End" Margin="0,3,0,0">
                                <Label Text="🕐" FontSize="13"/>
                                <Label Text="{Binding HorarioFormatado}"
                                       FontSize="13" TextColor="#1CBCF0" FontAttributes="Bold"/>
                            </StackLayout>
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- Botão fixo na base -->
        <Button Grid.Row="2"
                Text="Sair"
                BackgroundColor="#E53E3E"
                TextColor="White"
                FontSize="16"
                FontAttributes="Bold"
                CornerRadius="10"
                HeightRequest="48"
                Margin="16,0,16,20"
                VerticalOptions="End"
                Command="{Binding SairCommand}" />
    </Grid>
</ContentPage>
